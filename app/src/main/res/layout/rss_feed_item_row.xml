<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp"
    android:paddingTop="20dp" android:paddingBottom="5dp" android:paddingRight="20dp">

    <TextView
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:id="@+id/rssFeedItemLetterTextView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="X"
        android:textSize="44sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rssFeedItemTitleTextView"
        android:text="@string/text_title"
        android:textSize="20sp"
        android:maxLines="1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/rssFeedItemLetterTextView"
        android:layout_toEndOf="@+id/rssFeedItemLetterTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:id="@+id/rssFeedItemDescTextView"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="bla bla bla bla bla"
        android:maxLines="2"
        android:textSize="12sp"
        android:layout_below="@+id/rssFeedItemTitleTextView"
        android:layout_toRightOf="@+id/rssFeedItemLetterTextView"
        android:layout_toEndOf="@+id/rssFeedItemLetterTextView"/>


</RelativeLayout>